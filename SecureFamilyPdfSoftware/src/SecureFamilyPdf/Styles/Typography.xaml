<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Typography Settings -->
    
    <!-- Font Families -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>
    <FontFamily x:Key="MonospaceFontFamily">Consolas</FontFamily>
    <FontFamily x:Key="SerifFontFamily">Times New Roman</FontFamily>
    
    <!-- Font Sizes -->
    <x:Double x:Key="DefaultFontSize">12</x:Double>
    <x:Double x:Key="SmallFontSize">10</x:Double>
    <x:Double x:Key="LargeFontSize">14</x:Double>
    <x:Double x:Key="ExtraLargeFontSize">16</x:Double>
    <x:Double x:Key="TitleFontSize">18</x:Double>
    <x:Double x:Key="MenuFontSize">11</x:Double>
    <x:Double x:Key="StatusBarFontSize">10</x:Double>
    <x:Double x:Key="ThumbnailFontSize">9</x:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="NormalFontWeight">Normal</FontWeight>
    <FontWeight x:Key="BoldFontWeight">Bold</FontWeight>
    <FontWeight x:Key="SemiBoldFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="LightFontWeight">Light</FontWeight>
    
    <!-- Text Styles -->
    <Style x:Key="DefaultTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource TitleFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource BoldFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>
    
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Opacity" Value="0.7"/>
    </Style>
    
    <Style x:Key="StatusTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource StatusBarFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource StatusBarTextBrush}"/>
    </Style>
    
    <Style x:Key="ThumbnailTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource ThumbnailFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <Style x:Key="MenuTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource MenuFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource MenuTextBrush}"/>
    </Style>
    
    <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
    </Style>
    
    <Style x:Key="WarningTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
    </Style>
    
    <Style x:Key="SuccessTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
    </Style>
    
    <Style x:Key="InfoTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="{StaticResource NormalFontWeight}"/>
        <Setter Property="Foreground" Value="{StaticResource InfoBrush}"/>
    </Style>
    
</ResourceDictionary>
