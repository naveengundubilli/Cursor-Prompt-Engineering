<Application x:Class="SecurePdfEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design theme -->
                <materialDesign:BundledTheme BaseTheme="Light" PrimaryColor="Blue" SecondaryColor="LightBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Global application styles -->
            <Style TargetType="Window" BasedOn="{StaticResource MaterialDesignWindow}">
                <Setter Property="Title" Value="Secure PDF Editor" />
                <Setter Property="MinWidth" Value="800" />
                <Setter Property="MinHeight" Value="600" />
                <Setter Property="WindowStartupLocation" Value="CenterScreen" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

